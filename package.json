{
  "name": "pongpush",
  "version": "1.0.0",
  "description": "Mobile-optimized photo upload app with GitHub integration",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "type-check": "npm run type-check:app && npm run type-check:workflows",
    "type-check:app": "tsc --noEmit",
    "type-check:workflows": "tsc --project src/workflows/tsconfig.json --noEmit",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:report": "playwright show-report"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/node": "^22.10.5",
    "bun-types": "^1.3.5",
    "typescript": "^5.7.2",
    "vite": "^6.0.7"
  },
  "dependencies": {
    "@octokit/rest": "^21.0.2"
  }
}
